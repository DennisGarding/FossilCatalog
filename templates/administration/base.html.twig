<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% trans %}admin.baseTitle{% endtrans %}|{% block title %}{% endblock %}</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('bootstrap/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('bootstrap/bootstrap-icons-1.10.5/font/bootstrap-icons.css') }}">
    <script type="application/javascript" src="{{ asset('bootstrap/Bootstrap.js') }}" defer></script>

    {% include 'administration/css.html.twig' %}
    {% block stylesheets %}{% endblock %}

    <script type="application/javascript" src="{{ asset('js/admin.main.js') }}" defer></script>
    <script type="application/javascript" src="{{ asset('js/CustomElements.js') }}" defer></script>
    {% block javascripts %}{% endblock %}
</head>
<body data-keep-session="true" data-url="{{ url('app_admin_keep_session') }}" data-logoutUrl="{{ url('administration_logout') }}">
    {% block navbar %}
        {% include 'administration/nav.html.twig' %}
    {% endblock %}

    <div class="container">
        {% block content %}

        {% endblock %}
    </div>

    <div id="modal-template-container" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button id="closeButton" type="button" class="close btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            <i class="bi bi-x-lg"></i>
                        </span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="modal-inner-content"></div>
                    <input type="text" name="confirmInput" class="form-control visually-hidden"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="yesButton btn btn-primary visually-hidden">
                        {% trans %}base.modal.yes{% endtrans %}
                    </button>
                    <button type="button" class="noButton btn btn-secondary visually-hidden" data-dismiss="modal">
                        {% trans %}base.modal.no{% endtrans %}
                    </button>
                    <button type="button" class="okButton btn btn-primary visually-hidden" data-dismiss="modal">
                        {% trans %}base.modal.ok{% endtrans %}
                    </button>
                    <button type="button" class="cancelButton btn btn-secondary visually-hidden" data-dismiss="modal">
                        {% trans %}base.modal.cancel{% endtrans %}
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="page-loading-indicator">
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">{% trans %}base.loadingIndicator.loading{% endtrans %}</span>
            </div>
        </div>
    </div>
</body>
</html>
