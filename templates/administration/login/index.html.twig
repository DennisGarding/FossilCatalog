{% extends 'administration/base.html.twig' %}

{% block title %}Login{% endblock %}
{% block navbar %}{% endblock %}
{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="login-form-container">
        <div class="card shadow centered position-absolute top-50 start-50 translate-middle">
            <div class="card-body">
                <form action="{{ path('administration_login') }}" method="post">
                    <h5 class="card-title">Login</h5>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# If you want to control the URL the user is redirected to on success #}
                    {# <input type="hidden" name="_target_path" value="/account"> #}

                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">E-Mail Addresse</label>
                        <input type="email" class="form-control" id="username" name="_username"
                               value="{{ last_username }}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="_password">
                    </div>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
